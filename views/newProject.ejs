<!DOCTYPE html>
<html>
    <head>
        <title> EaseAster | Log In</title>
        <%- include("mainheader") -%>
          

    </head>
    <body>
        <%- include("header") -%>

        <h1>NEW PROJECT</h1>
        <form action="/new-project" method="post">
            <input type="text" name="pName" placeholder="Project's name"/>
            <div class="accordion accordion-flush" id="product-filter-accordion">
                <div id="product-filter-sidebar-manufacturers" class="product-filter-sidebar widget-area accordion-item" role="complementary">
                  <h3 id="heading-manufacturers" class="accordion-header">
                    <button data-bs-toggle="collapse" data-bs-target="#collapse-manufacturers" aria-controls="collapse-manufacturers" aria-expanded="false" class="accordion-button collapsed" type="button">Add Collection Point</button>
                  </h3>
                  <div id="collapse-manufacturers" aria-labelledby="heading-manufacturers" data-bs-parent="#product-filter-accordion" class="accordion-collapse collapse">
                    <div class="accordion-body">
                      <input type="text" name="collectionName" placeholder="Collection's Point Name" />
                      <input type="text" name="collectionDescription" placeholder="Description (general description and open hours)" />
                      <input type="text" name="collectionLocation" placeholder="Location" />

                        <% for (let category of allItems) { %>
                            <div class="accordion accordion-flush">
                                <div class="accordion-item">
                                  <button data-bs-toggle="collapse" data-bs-target="#i-<%= category.id %>" aria-controls="collapse-manufacturers" aria-expanded="false" class="accordion-button collapsed" type="button">Category: <%= category.name %></button>
                                  <div id="i-<%= category.id %>" class="accordion-collapse collapse collapsed">
                                      <% for (let item of category.items) { %>

                                        <div class="form-check">
                                          <input class="form-check-input checkbox-item" type="checkbox" name="collection[]" value="<%= item.id %>" id="i-<%= item.id %>">
                                            <label class="form-check-label" for="i-<%= item.id %>">
                                                <%= item.name %>
                                            </label>
                                          </div>

                                      <% } %>
                                  </div>
                                </div>
                              </div>
                              
                          <% } %>      
                    </div>
                  </div>
                </div>
              </div>
              <div class="accordion accordion-flush" id="product-filter-accordion">
                <div id="product-filter-sidebar-manufacturers" class="product-filter-sidebar widget-area accordion-item" role="complementary">
                  <h3 id="heading-manufacturers" class="accordion-header">
                    <button data-bs-toggle="collapse" data-bs-target="#distribution-point" aria-controls="distribution-point" aria-expanded="false" class="accordion-button collapsed" type="button">Add Collection Point</button>
                  </h3>
                  <div id="distribution-point" aria-labelledby="heading-manufacturers" data-bs-parent="#product-filter-accordion" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <input type="text" name="distributionionName" placeholder="Distribution's Point Name" />
                        <input type="text" name="distirbutionDescription" placeholder="Description (general description and open hours)"/>
                        <input type="text" name="distributiontionLocation" placeholder="Location" />

                        <% for (let category of allItems) { %>
                            <div class="accordion accordion-flush">
                                <div class="accordion-item">
                                  <button data-bs-toggle="collapse" data-bs-target="#i-<%= category.id %>" aria-controls="distribution-point" aria-expanded="false" class="accordion-button collapsed" type="button">Category: <%= category.name %></button>
                                  <div id="i-<%= category.id %>" class="accordion-collapse collapse collapsed">
                                      <% for (let item of category.items) { %>

                                        <div class="form-check">
                                          <input class="form-check-input checkbox-item" type="checkbox" name="distribution[]" value="<%= item.id %>" id="i-<%= item.id %>">
                                            <label class="form-check-label" for="i-<%= item.id %>">
                                                <%= item.name %>
                                            </label>
                                          </div>

                                      <% } %>
                                  </div>
                                </div>
                              </div>
                              
                          <% } %>      
                    </div>
                  </div>
                </div>
              </div>


              <div class="collection-point">
                <input class="" />
                <input class="" />
            </div>
            <div class="add-distribution-point">Add Distribution Point</div>
            <a href="/projects">CANCEL</a>
            <button type="submit">SAVE</button>
        </form>
        <!-- <script src="./js/new-project.js"></script> -->

        <%- include("footer") -%>