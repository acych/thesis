<!DOCTYPE html>
<html>
    <head>
        <title> EaseAster | Projects</title>
        <%- include("mainheader") -%>
        <link rel="stylesheet" href="./css/projects.css">
        <link rel="stylesheet" href="./css/forms.css">
    </head>
    <body>
        <%- include("header") -%>
        <nav aria-label="breadcrumb" class="bc-nav">
            <ol class="breadcrumb container">
                <li class="breadcrumb-item" aria-current="page"><a href="/">Home</a></li>
                <li class="breadcrumb-item" aria-current="page"><a href="/projects">Projects</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                    Edit Distribution Point
                </li>
            </ol>
        </nav>
        <div class="content-title">
            EDIT DISTRIBUTION POINT
        </div>
        <div class="projects-container add-point-container container">
            <a href="/close-distribution-point?prId=<%=projectId%>">CLOSE DISTRIBUTION POINT</a>

          <form action="/edit-distribution-point" method="post">
                    <input type="text" name="distributionnName" placeholder="Distribution's Point Name" value="<%=name%>" />
                    <textarea maxlength="300" type="text" name="distributionDescription" placeholder="Description (general description and open hours)"><%=description%></textarea>
                    <div class="location-inputs">
                      <div class="location-iputs-title">Distribution point address</div>
                      <%
                      const addressString = "Address, Athens, 12345, Attiki, Greece";
                      const [add, city, postCode, area, country] = addressString.split(",").map(element => element.trim());
                      %>
                      <div class="row">
                        <div class="col-6">
                          <input type="text" name="distributionAddress" placeholder="Address" value="<%=add%>"/>
                        </div>
                        <div class="col-4">
                          <input type="text" name="distributionCity" placeholder="City" value="<%=city%>"/>
                        </div>
                        <div class="col-4">
                          <input type="text" name="distributionPostalCode" placeholder="Postal Code" value="<%=postCode%>"/>
                        </div>
                        <div class="col">
                          <input type="text" name="cdistributionArea" placeholder="Area/Region" value="<%=area%>"/>
                        </div>
                        <div class="col">
                          <input type="text" name="distributionCountry" placeholder="Country" value="<%=country%>"/>
                        </div>
                      </div>
                    </div>
            <% for (let category of items) { %>
                <div class="accordion accordion-flush accordion-category">
                    <div class="accordion-item">
                      <button data-bs-toggle="collapse" data-bs-target="#id-<%= category.id %>" aria-controls="id-<%= category.id %> aria-expanded="false" class="accordion-button collapsed" type="button">Category: <%= category.name %></button>
                      <div id="id-<%= category.id %>" class="accordion-collapse collapse collapsed check-elements">
                          <% for (let item of category.items) { %>

                            <div class="form-check">
                                

                                    <% var isSelected=false; %>
                                    <% for (let sitem of selectedItems) { %>
                                    <%if(sitem.itemId.toString()==item.id.toString()){%>
                                    <%isSelected = true%>
                                    <% break %>
                                    <%}%>
                                    <%}%>
                                    <input class="form-check-input checkbox-item" type="checkbox" name="distribution[]" value='{"id": "<%= item.itemId %>", "name": "<%= item.name %>"}' id="i-<%= item.itemId %>" <%= isSelected ? "checked" : "" %>>
                              <label class="form-check-label" for="i-<%= item.id %>">
                                <%= item.name %>
                              </label>
                            </div>

                          <% } %>
                      </div>
                    </div>
                  </div>
                  
              <% } %> 
              <div class="buttons-container">
            <a class="cancel-button" href="/projects">CANCEL</a>
            <button class="submit-button" type="submit">SAVE</button>
            </div>
        </form>
      </div>

        <%- include("footer") -%>
